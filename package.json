{
	"name": "wdy-vscode-plugin",
	"displayName": "wdy-vscode-plugin",
	"description": "toolbox for develop wdy custom component",
	"version": "0.0.1",
	"keywords": [
		"vscode extension",
		"vscode plugin",
		"vue snippets",
		"cli",
		"toolbox"
	],
	"author": {
		"name": "zhangtian",
		"email": "phpisgood@qq.com",
		"url": "https://github.com/zt123123"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/zt123123/wdy-vscode-plugin.git"
	},
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:wdy-vscode-plugin.createProject"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "vue",
				"aliases": [
					"Vue",
					"vue"
				],
				"extensions": [
					".vue"
				]
			}
		],
		"snippets": [
			{
				"language": "html",
				"path": "./src/snippets/html.json"
			},
			{
				"language": "vue-html",
				"path": "./src/snippets/html.json"
			},
			{
				"language": "vue",
				"path": "./src/snippets/html.json"
			},
			{
				"language": "javascript",
				"path": "./src/snippets/api.json"
			},
			{
				"language": "typescript",
				"path": "./src/snippets/api.json"
			}
		],
		"commands": [
			{
				"command": "wdy-vscode-plugin.createProject",
				"title": "Create Project"
			},
			{
				"command": "wdy-vscode-plugin.createComponent",
				"title": "Create Component"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "wdy-vscode-plugin.createProject",
					"group": "navigation@1",
					"when": "explorerResourceIsFolder"
				},
				{
					"command": "wdy-vscode-plugin.createComponent",
					"group": "navigation@2",
					"when": "explorerResourceIsFolder"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
		"release": "standard-version",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@commitlint/cli": "^15.0.0",
		"@commitlint/config-angular": "^15.0.0",
		"@types/fs-extra": "^9.0.13",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "^14.18.1",
		"@types/vscode": "^1.63.0",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"@vscode/test-electron": "^1.6.2",
		"commitizen": "^4.2.4",
		"conventional-changelog": "^3.1.24",
		"conventional-changelog-cli": "^2.1.1",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.1.0",
		"execa": "^6.0.0",
		"glob": "^7.1.7",
		"husky": "^7.0.4",
		"lint-staged": "^12.1.2",
		"mocha": "^9.1.3",
		"prettier": "^2.5.1",
		"standard-version": "^9.3.2",
		"typescript": "^4.4.4"
	},
	"dependencies": {
		"cross-spawn": "^7.0.3",
		"fs-extra": "^10.0.0"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
